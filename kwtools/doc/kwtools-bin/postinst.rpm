#!/bin/sh

EXEC=/usr/lib/kwtools
BIN_PATH=/usr/bin

if [ -L ${BIN_PATH}/kwadmin ] ; then
	rm ${BIN_PATH}/kwadmin &>/dev/null
	ln -sf ${EXEC}/kwadmin ${BIN_PATH}
else
	ln -sf ${EXEC}/kwadmin ${BIN_PATH}
fi

echo ""
echo "Compile functions from kwtools-scripts"
echo ""
/bin/zsh -fc 'setopt extendedglob ; for i in /usr/share/kwtools/functions/kwadmin ; do
	zcompile -U -M $i.zwc $i/*~*.zwc(^/) ; chmod 644 $i.zwc ; done'	
exit 0
