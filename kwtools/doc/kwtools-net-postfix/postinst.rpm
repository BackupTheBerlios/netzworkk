#!/bin/sh

EXEC=/usr/lib/kwtools/net
SBIN_PATH=/usr/sbin

cd $SBIN_PATH
if [ -L kwpostfix ] ; then
	rm kwpostfix &>/dev/null
	ln -sf ${EXEC}/kwpostfix ${SBIN_PATH}
else
	ln -sf ${EXEC}/kwpostfix ${SBIN_PATH}
fi

echo ""
echo "Compile functions from kwtools-scripts"
echo ""
/bin/zsh -fc 'setopt extendedglob ; for i in /usr/share/kwtools/functions/kwpostfix ; do
	zcompile -U -M $i.zwc $i/*~*.zwc(^/) ; chmod 644 $i.zwc ; done'	
exit 0
