# lmtp Parameter einstellen{{{
#
# usage: lmtp_conf
#
lmtp_conf() {

	# Variable
	LMTP_TITLE="${gv_Configuration}::${lv_Lmtp}"
	
	# Bestehende Konfiguration einlesen# {{{
	print -l ${(M)${(f)"$(postconf -c $MAIL_CONFIG)"}##(#s)lmtp_*} | \
		sed -e 's#\"#\\\"#g ; s# = #="#g ; s# =#="#g ;
		s#\$#\\\$#g ; s#$#"#g' >${gv_WorkDir}/postfix$$
	read_file -f ${gv_WorkDir}/postfix$$
	rm -rf ${gv_WorkDir}/postfix$$ &>/dev/null
	
	##############################################
	# OLD
	#postconf -c $MAIL_CONFIG | grep '^lmtp_' | sed -e 's# = #="#g ; s#\$#\\\$#g ; s#$#"#g' >${gv_WorkDir}/postfix$$
	##############################################
	
	## }}}
	# Funktion conf_lmtp_menue{{{
	############################################
	# TODO: Hilfe etc. vorbereitet, nur noch menue
	# lmtp_address_preference = any
	# lmtp_assume_final = no
	# lmtp_bind_address =
	# lmtp_bind_address6 =
	# lmtp_body_checks =
	# lmtp_cname_overrides_servername = no
	# lmtp_connection_cache_destinations =
	# lmtp_connection_cache_on_demand = yes
	# lmtp_connection_cache_time_limit = 2s
	# lmtp_connection_reuse_time_limit = 300s
	# lmtp_defer_if_no_mx_address_found = no
	# lmtp_delivery_slot_cost = $default_delivery_slot_cost
	# lmtp_delivery_slot_discount = $default_delivery_slot_discount
	# lmtp_delivery_slot_loan = $default_delivery_slot_loan
	# lmtp_destination_concurrency_failed_cohort_limit = $default_destination_concurrency_failed_cohort_limit
	# lmtp_destination_concurrency_negative_feedback = $default_destination_concurrency_negative_feedback
	# lmtp_destination_concurrency_positive_feedback = $default_destination_concurrency_positive_feedback
	# lmtp_destination_rate_delay = $default_destination_rate_delay
	# lmtp_discard_lhlo_keyword_address_maps =
	# lmtp_discard_lhlo_keywords =
	# lmtp_dns_resolver_options =
	# lmtp_enforce_tls = no
	# lmtp_extra_recipient_limit = $default_extra_recipient_limit
	# lmtp_generic_maps =
	# lmtp_header_checks =
	# lmtp_host_lookup = dns
	# lmtp_initial_destination_concurrency = $initial_destination_concurrency
	# lmtp_lhlo_name = $myhostname
	# lmtp_line_length_limit = 998
	# lmtp_mime_header_checks =
	# lmtp_minimum_delivery_slots = $default_minimum_delivery_slots
	# lmtp_mx_address_limit = 5
	# lmtp_mx_session_limit = 2
	# lmtp_nested_header_checks =
	# lmtp_per_record_deadline = no
	# lmtp_pix_workaround_delay_time = 10s
	# lmtp_pix_workaround_maps =
	# lmtp_pix_workaround_threshold_time = 500s
	# lmtp_pix_workarounds = disable_esmtp,delay_dotcrlf
	# lmtp_quote_rfc821_envelope = yes
	# lmtp_randomize_addresses = yes
	# lmtp_recipient_limit = $default_recipient_limit
	# lmtp_recipient_refill_delay = $default_recipient_refill_delay
	# lmtp_recipient_refill_limit = $default_recipient_refill_limit
	# lmtp_reply_filter =
	# lmtp_sasl_auth_cache_name =
	# lmtp_sasl_auth_cache_time = 90d
	# lmtp_sasl_auth_soft_bounce = yes
	# lmtp_sasl_mechanism_filter =
	# lmtp_sasl_path =
	# lmtp_sasl_tls_security_options = $lmtp_sasl_security_options
	# lmtp_sasl_tls_verified_security_options = $lmtp_sasl_tls_security_options
	# lmtp_sasl_type = cyrus
	# lmtp_send_dummy_mail_auth = no
	# lmtp_sender_dependent_authentication = no
	# lmtp_skip_5xx_greeting = yes
	# lmtp_starttls_timeout = 300s
	# lmtp_tls_CAfile =
	# lmtp_tls_CApath =
	# lmtp_tls_block_early_mail_reply = no
	# lmtp_tls_cert_file =
	# lmtp_tls_ciphers = export
	# lmtp_tls_dcert_file =
	# lmtp_tls_dkey_file = $lmtp_tls_dcert_file
	# lmtp_tls_eccert_file =
	# lmtp_tls_eckey_file = $lmtp_tls_eccert_file
	# lmtp_tls_enforce_peername = yes
	# lmtp_tls_exclude_ciphers =
	# lmtp_tls_fingerprint_cert_match =
	# lmtp_tls_fingerprint_digest = md5
	# lmtp_tls_key_file = $lmtp_tls_cert_file
	# lmtp_tls_loglevel = 0
	# lmtp_tls_mandatory_ciphers = medium
	# lmtp_tls_mandatory_exclude_ciphers =
	# lmtp_tls_mandatory_protocols = SSLv3, TLSv1
	# lmtp_tls_note_starttls_offer = no
	# lmtp_tls_per_site =
	# lmtp_tls_policy_maps =
	# lmtp_tls_protocols = !SSLv2
	# lmtp_tls_scert_verifydepth = 9
	# lmtp_tls_secure_cert_match = nexthop
	# lmtp_tls_security_level =
	# lmtp_tls_session_cache_database =
	# lmtp_tls_session_cache_timeout = 3600s
	# lmtp_tls_verify_cert_match = hostname
	# lmtp_use_tls = no
	############################################
	conf_lmtp_menue() {
		LMTP_MENU=(lmtp_connect_timeout \"\$lmtp_connect_timeout\"
		lmtp_data_done_timeout \"\$lmtp_data_done_timeout\"
		lmtp_data_init_timeout \"\$lmtp_data_init_timeout\"
		lmtp_data_xfer_timeout \"\$lmtp_data_xfer_timeout\"
		lmtp_destination_concurrency_limit \"\$lmtp_destination_concurrency_limit\"
		lmtp_destination_recipient_limit \"\$lmtp_destination_recipient_limit\"
		lmtp_lhlo_timeout \"\$lmtp_lhlo_timeout\"
		lmtp_mail_timeout \"\$lmtp_mail_timeout\"
		lmtp_quit_timeout \"\$lmtp_quit_timeout\"
		lmtp_rcpt_timeout \"\$lmtp_rcpt_timeout\"
		lmtp_rset_timeout \"\$lmtp_rset_timeout\"
		lmtp_sasl_auth_enable \"\$lmtp_sasl_auth_enable\"
		lmtp_sasl_password_maps \"\$lmtp_sasl_password_maps\"
		lmtp_sasl_security_options \"\$lmtp_sasl_security_options\"
		lmtp_send_xforward_command \"\$lmtp_send_xforward_command\"
		lmtp_skip_quit_response \"\$lmtp_skip_quit_response\"
		lmtp_tcp_port \"\$lmtp_tcp_port\"
		lmtp_xforward_timeout \"\$lmtp_xforward_timeout\"
		postfix \"reload\"
		$gv_Back \"\")
		if [[ ${#argv} == 1 ]] ; then
			menubox -d "$1" "$LMTP_TITLE" "$gv_Menupoint" "$LMTP_MENU"
		else
			menubox "$LMTP_TITLE" "$gv_Menupoint" "$LMTP_MENU"
		fi
	}
	#}}}
	conf_lmtp_menue
	while [ "$gv_Auswahl" ] ; do
		case "$gv_Auswahl" in
			HELP*)	script_help lmtp_help
				conf_lmtp_menue
				;;
			lmtp_address_preference)
				# = any
				conf_lmtp_menue lmtp_address_preference
				;;
			lmtp_assume_final)
				# = no
				conf_lmtp_menue lmtp_assume_final
				;;
			lmtp_bind_address)
				#
				conf_lmtp_menue lmtp_bind_address
				;;
			lmtp_bind_address6)
				#
				conf_lmtp_menue lmtp_bind_address6
				;;
			lmtp_body_checks)
				#
				conf_lmtp_menue lmtp_body_checks
				;;
			lmtp_cname_overrides_servername)
				# = no
				conf_lmtp_menue lmtp_cname_overrides_servername
				;;
			lmtp_connect_timeout)
				# Timeout fuer den Aufbau der Verbindung{{{
				number_input -s "${lmtp_connect_timeout%?}"
				if [[ -n $NUMBER ]] ; then
					lmtp_connect_timeout="$NUMBER"
					postconf -e lmtp_connect_timeout="$NUMBER"
				fi
				#}}}
				conf_lmtp_menue lmtp_connect_timeout
				;;
			lmtp_connection_cache_destinations)
				# =
				conf_lmtp_menue lmtp_connection_cache_destinations
				;;
			lmtp_connection_cache_on_demand)
				# = yes
				conf_lmtp_menue lmtp_connection_cache_on_demand
				;;
			lmtp_connection_cache_time_limit)
				# = 2s
				conf_lmtp_menue lmtp_connection_cache_time_limit
				;;
			lmtp_connection_reuse_time_limit)
				# = 300s
				conf_lmtp_menue lmtp_connection_reuse_time_limit
				;;
			lmtp_data_done_timeout)
				# Timeout nach erfolgter Übertragung der mail per LMTP{{{
				number_input -s "${lmtp_data_done_timeout%?}"
				if [[ -n $NUMBER ]] ; then
					lmtp_data_done_timeout="$NUMBER"
					postconf -e lmtp_data_done_timeout="$NUMBER"
				fi
				#}}}
				conf_lmtp_menue lmtp_data_done_timeout
				;;
			lmtp_data_init_timeout)
				# Timeout nach dem LMTP Kommando DATA{{{
				number_input -s "${lmtp_data_init_timeout%?}"
				if [[ -n $NUMBER ]] ; then
					lmtp_data_init_timeout="$NUMBER"
					postconf -e lmtp_data_init_timeout="$NUMBER"
				fi
				#}}}
				conf_lmtp_menue lmtp_data_init_timeout
				;;
			lmtp_data_xfer_timeout)
				# Timeout waehrend der Übertragung zu einem LMTP Server{{{
				number_input -s "${lmtp_data_xfer_timeout%?}"
				if [[ -n $NUMBER ]] ; then
					lmtp_data_xfer_timeout="$NUMBER"
					postconf -e lmtp_data_xfer_timeout="$NUMBER"
				fi
				#}}}
				conf_lmtp_menue lmtp_data_xfer_timeout
				;;
			lmtp_defer_if_no_mx_address_found)
				# = no
				conf_lmtp_menue lmtp_defer_if_no_mx_address_found
				;;
			lmtp_delivery_slot_cost)
				# = $default_delivery_slot_cost
				conf_lmtp_menue lmtp_delivery_slot_cost
				;;
			lmtp_delivery_slot_discount)
				# = $default_delivery_slot_discount
				conf_lmtp_menue lmtp_delivery_slot_discount
				;;
			lmtp_delivery_slot_loan)
				# = $default_delivery_slot_loan
				conf_lmtp_menue lmtp_delivery_slot_loan
				;;
			lmtp_destination_concurrency_failed_cohort_limit)
				# = $default_destination_concurrency_failed_cohort_limit
				conf_lmtp_menue lmtp_destination_concurrency_failed_cohort_limit
				;;
			lmtp_destination_concurrency_limit)
				# max. Anzahl gleichzeitiger Verbindungen per{{{
				# LMTP zu einem Rechner
				number_input -i "$lmtp_destination_concurrency_limit"
				if [[ -n $NUMBER ]] ; then
					lmtp_destination_concurrency_limit="$NUMBER"
					postconf -e lmtp_destination_concurrency_limit="$NUMBER"
				fi
				#}}}
				conf_lmtp_menue lmtp_destination_concurrency_limit
				;;
			lmtp_destination_concurrency_negative_feedback)
				# = $default_destination_concurrency_negative_feedback
				conf_lmtp_menue lmtp_destination_concurrency_negative_feedback
				;;
			lmtp_destination_concurrency_positive_feedback)
				# = $default_destination_concurrency_positive_feedback
				conf_lmtp_menue lmtp_destination_concurrency_positive_feedback
				;;
			lmtp_destination_rate_delay)
				# = $default_destination_rate_delay
				conf_lmtp_menue lmtp_destination_rate_delay
				;;
			lmtp_destination_recipient_limit)
				# max. Anzahl der Empfaenger in einer mail{{{
				number_input -i "$lmtp_destination_recipient_limit"
				if [[ -n $NUMBER ]] ; then
					lmtp_destination_recipient_limit="$NUMBER"
					postconf -e lmtp_destination_recipient_limit="$NUMBER"
				fi
				#}}}
				conf_lmtp_menue lmtp_destination_recipient_limit
				;;
			lmtp_discard_lhlo_keyword_address_maps)
				# =
				conf_lmtp_menue lmtp_discard_lhlo_keyword_address_maps
				;;
			lmtp_discard_lhlo_keywords)
				# =
				conf_lmtp_menue lmtp_discard_lhlo_keywords
				;;
			lmtp_dns_resolver_options)
				# =
				conf_lmtp_menue lmtp_dns_resolver_options
				;;
			lmtp_lhlo_name)
				# = $myhostname
				conf_lmtp_menue lmtp_lhlo_name
				;;
			lmtp_lhlo_timeout)
				# Timeout nach dem LMTP Kommando LHLO{{{
				number_input -s "${lmtp_lhlo_timeout%?}"
				if [[ -n $NUMBER ]] ; then
					lmtp_lhlo_timeout="$NUMBER"
					postconf -e lmtp_lhlo_timeout="$NUMBER"
				fi
				#}}}
				conf_lmtp_menue lmtp_lhlo_timeout
				;;
			lmtp_line_length_limit)
				# = 998
				conf_lmtp_menue lmtp_line_length_limit
				;;
			lmtp_mail_timeout)
				# Timeout nach dem LMTP Kommando MAIL FROM:{{{
				number_input -s "${lmtp_mail_timeout%?}"
				if [[ -n $NUMBER ]] ; then
					lmtp_mail_timeout="$NUMBER"
					postconf -e lmtp_mail_timeout="$NUMBER"
				fi
				#}}}
				conf_lmtp_menue lmtp_mail_timeout
				;;
			lmtp_mime_header_checks)
				# =
				conf_lmtp_menue lmtp_mime_header_checks
				;;
			lmtp_minimum_delivery_slots)
				# = $default_minimum_delivery_slots
				conf_lmtp_menue lmtp_minimum_delivery_slots
				;;
			lmtp_mx_address_limit)
				# = 5
				conf_lmtp_menue lmtp_mx_address_limit
				;;
			lmtp_mx_session_limit)
				# = 2
				conf_lmtp_menue lmtp_mx_session_limit
				;;
			lmtp_nested_header_checks)
				# =
				conf_lmtp_menue lmtp_nested_header_checks
				;;
			lmtp_per_record_deadline)
				# = no
				conf_lmtp_menue lmtp_per_record_deadline
				;;
			lmtp_pix_workaround_delay_time)
				# = 10s
				conf_lmtp_menue lmtp_pix_workaround_delay_time
				;;
			lmtp_pix_workaround_maps)
				# =
				conf_lmtp_menue lmtp_pix_workaround_maps
				;;
			lmtp_pix_workaround_threshold_time)
				# = 500s
				conf_lmtp_menue lmtp_pix_workaround_threshold_time
				;;
			lmtp_pix_workarounds)
				# = disable_esmtp,delay_dotcrlf
				conf_lmtp_menue lmtp_pix_workarounds
				;;
			lmtp_quit_timeout)
				# Timeout nach dem LMTP Kommando QUIT{{{
				number_input -s "${lmtp_quit_timeout%?}"
				if [[ -n $NUMBER ]] ; then
					lmtp_quit_timeout="$NUMBER"
					postconf -e lmtp_quit_timeout="$NUMBER"
				fi
				#}}}
				conf_lmtp_menue lmtp_quit_timeout
				;;
			lmtp_quote_rfc821_envelope)
				# = yes
				conf_lmtp_menue lmtp_quote_rfc821_envelope
				;;
			lmtp_randomize_addresses)
				# = yes
				conf_lmtp_menue lmtp_randomize_addresses
				;;
			lmtp_rcpt_timeout)
				# Timeout nach dem LMTP Kommando RCPT TO:{{{
				number_input -s "${lmtp_rcpt_timeout%?}"
				if [[ -n $NUMBER ]] ; then
					lmtp_rcpt_timeout="$NUMBER"
					postconf -e lmtp_rcpt_timeout="$NUMBER"
				fi
				#}}}
				conf_lmtp_menue lmtp_rcpt_timeout
				;;
			lmtp_recipient_limit)
				# = $default_recipient_limit
				conf_lmtp_menue lmtp_recipient_limit
				;;
			lmtp_recipient_refill_delay)
				# = $default_recipient_refill_delay
				conf_lmtp_menue lmtp_recipient_refill_delay
				;;
			lmtp_recipient_refill_limit)
				# = $default_recipient_refill_limit
				conf_lmtp_menue lmtp_recipient_refill_limit
				;;
			lmtp_reply_filter)
				# =
				conf_lmtp_menue lmtp_reply_filter
				;;
			lmtp_rset_timeout)
				# Timeout nach dem LMTP Kommando RSET{{{
				number_input -s "${lmtp_rset_timeout%?}"
				if [[ -n $NUMBER ]] ; then
					lmtp_rset_timeout="$NUMBER"
					postconf -e lmtp_rset_timeout="$NUMBER"
				fi
				#}}}
				conf_lmtp_menue lmtp_rset_timeout
				;;
			lmtp_sasl_auth_cache_name)
				# =
				conf_lmtp_menue lmtp_sasl_auth_cache_name
				;;
			lmtp_sasl_auth_cache_time)
				# = 90d
				conf_lmtp_menue lmtp_sasl_auth_cache_time
				;;
			lmtp_sasl_auth_enable)
				# SMTP-AUTH beim Versand ueber LMTP aktivieren?{{{
				LMTP_SASL_AUTH_MSG=$(gettext 'SMTP-AUTH beim Versand ueber LMTP aktivieren (ja/nein)?')
				ja_nein_tausch "$LMTP_TITLE" "$LMTP_SASL_AUTH_MSG"
				lmtp_sasl_auth_enable="$WERT"
				postconf -e lmtp_sasl_auth_enable="$WERT"
				unset -- WERT
				#}}}
				conf_lmtp_menue lmtp_sasl_auth_enable
				;;
			lmtp_sasl_auth_soft_bounce)
				# = yes
				conf_lmtp_menue lmtp_sasl_auth_soft_bounce
				;;
			lmtp_sasl_mechanism_filter)
				# =
				conf_lmtp_menue lmtp_sasl_mechanism_filter
				;;
			lmtp_sasl_password_maps)
				# Tabelle fuer Kennungen/Passwoertern fuer authentifiezierte LMTP Verbindungen{{{
				tab_support_choice "$gv_Auswahl"
				lmtp_sasl_password_maps="$MAPS"
				postconf -e lmtp_sasl_password_maps="$MAPS"
				#}}}
				conf_lmtp_menue lmtp_sasl_password_maps
				;;
			lmtp_sasl_path)
				# =
				conf_lmtp_menue lmtp_sasl_path
				;;
			lmtp_sasl_security_options)
				# Authentifizierungs Methoden{{{
				mail_mechanism
				if [[ -n $WERT ]] ; then
					lmtp_sasl_security_options="$WERT"
					postconf -e lmtp_sasl_security_options="$WERT"
				fi
				#}}}
				conf_lmtp_menue lmtp_sasl_security_options
				;;
			lmtp_sasl_tls_security_options)
				# = $lmtp_sasl_security_options
				conf_lmtp_menue lmtp_sasl_tls_security_options
				;;
			lmtp_sasl_tls_verified_security_options)
				# = $lmtp_sasl_tls_security_options
				conf_lmtp_menue lmtp_sasl_tls_verified_security_options
				;;
			lmtp_sasl_type)
				# = cyrus
				conf_lmtp_menue lmtp_sasl_type
				;;
			lmtp_send_dummy_mail_auth)
				# = no
				conf_lmtp_menue lmtp_send_dummy_mail_auth
				;;
			lmtp_send_xforward_command)
				# {{{
				LMTP_SEND_XFORWARD_COMD_MSG=$(gettext 'Soll ein XFORWARD Befehl an den LMTP Server gesendet werden (ja/nein)?')
				ja_nein_tausch "$LMTP_TITLE" "$LMTP_SEND_XFORWARD_COMD_MSG"
				lmtp_send_xforward_command="$WERT"
				postconf -e lmtp_send_xforward_command="$WERT"
				unset -- WERT
				#}}}
				conf_lmtp_menue lmtp_send_xforward_command
				;;
			lmtp_sender_dependent_authentication)
				# = no
				conf_lmtp_menue lmtp_sender_dependent_authentication
				;;
			lmtp_skip_5xx_greeting)
				# = yes
				conf_lmtp_menue lmtp_skip_5xx_greeting
				;;
			lmtp_skip_quit_response)
				# Beenden einer LMTP Sitzung nach dem QUIT Kommando, ohne auf Antwort zu warten?{{{
				LMTP_SKIP_QUIT_RESPONSE_MSG=$(gettext 'Beenden einer LMTP Sitzung nach dem QUIT Kommando, ohne auf Antwort zu warten (ja/nein)?')
				ja_nein_tausch "$LMTP_TITLE" "$LMTP_SKIP_QUIT_RESPONSE_MSG"
				lmtp_skip_quit_response="$WERT"
				postconf -e lmtp_skip_quit_response="$WERT"
				unset -- WERT
				#}}}
				conf_lmtp_menue lmtp_skip_quit_response
				;;
			lmtp_starttls_timeout)
				# = 300s
				conf_lmtp_menue lmtp_starttls_timeout
				;;
			lmtp_tcp_port)
				# lmtp TCP Port vergeben{{{
				LMTP_PORT_MSG=$(gettext 'Geben Sie den Port fuer das Protokoll LMTP ein. Standard ist 24.')
				number_input "$LMTP_TITLE" "$LMTP_PORT_MSG" "$lmtp_tcp_port"
				if [[ -n $NUMBER ]] ; then
					lmtp_tcp_port="$NUMBER"
					postconf -e lmtp_tcp_port="$NUMBER"
				fi
				#}}}
			 	conf_lmtp_menue lmtp_tcp_port
				;;
			lmtp_tls_CAfile)
				# =
				conf_lmtp_menue lmtp_tls_CAfile
				;;
			lmtp_tls_CApath)
				# =
				conf_lmtp_menue lmtp_tls_CApath
				;;
			lmtp_tls_block_early_mail_reply)
				# = no
				conf_lmtp_menue lmtp_tls_block_early_mail_reply
				;;
			lmtp_tls_cert_file)
				# =
				conf_lmtp_menue lmtp_tls_cert_file
				;;
			lmtp_tls_ciphers)
				# = export
				conf_lmtp_menue lmtp_tls_ciphers
				;;
			lmtp_tls_dcert_file)
				# =
				conf_lmtp_menue lmtp_tls_dcert_file
				;;
			lmtp_tls_dkey_file)
				# = $lmtp_tls_dcert_file
				conf_lmtp_menue lmtp_tls_dkey_file
				;;
			lmtp_tls_eccert_file)
				# =
				conf_lmtp_menue lmtp_tls_eccert_file
				;;
			lmtp_tls_eckey_file)
				# = $lmtp_tls_eccert_file
				conf_lmtp_menue lmtp_tls_eckey_file
				;;
			lmtp_tls_enforce_peername)
				# = yes
				conf_lmtp_menue lmtp_tls_enforce_peername
				;;
			lmtp_tls_exclude_ciphers)
				# =
				conf_lmtp_menue lmtp_tls_exclude_ciphers
				;;
			lmtp_tls_fingerprint_cert_match)
				# =
				conf_lmtp_menue lmtp_tls_fingerprint_cert_match
				;;
			lmtp_tls_fingerprint_digest)
				# = md5
				conf_lmtp_menue lmtp_tls_fingerprint_digest
				;;
			lmtp_tls_key_file)
				# = $lmtp_tls_cert_file
				conf_lmtp_menue lmtp_tls_key_file
				;;
			lmtp_tls_loglevel)
				# = 0
				conf_lmtp_menue lmtp_tls_loglevel
				;;
			lmtp_tls_mandatory_ciphers)
				# = medium
				conf_lmtp_menue lmtp_tls_mandatory_ciphers
				;;
			lmtp_tls_mandatory_exclude_ciphers)
				# =
				conf_lmtp_menue lmtp_tls_mandatory_exclude_ciphers
				;;
			lmtp_tls_mandatory_protocols)
				# = SSLv3, TLSv1
				conf_lmtp_menue lmtp_tls_mandatory_protocols
				;;
			lmtp_tls_note_starttls_offer)
				# = no
				conf_lmtp_menue lmtp_tls_note_starttls_offer
				;;
			lmtp_tls_per_site)
				# =
				conf_lmtp_menue lmtp_tls_per_site
				;;
			lmtp_tls_policy_maps)
				# =
				conf_lmtp_menue lmtp_tls_policy_maps
				;;
			lmtp_tls_protocols)
				# = !SSLv2
				conf_lmtp_menue lmtp_tls_protocols
				;;
			lmtp_tls_scert_verifydepth)
				# = 9
				conf_lmtp_menue lmtp_tls_scert_verifydepth
				;;
			lmtp_tls_secure_cert_match)
				# = nexthop
				conf_lmtp_menue lmtp_tls_secure_cert_match
				;;
			lmtp_tls_security_level)
				# =
				conf_lmtp_menue lmtp_tls_security_level
				;;
			lmtp_tls_session_cache_database)
				# =
				conf_lmtp_menue lmtp_tls_session_cache_database
				;;
			lmtp_tls_session_cache_timeout)
				# = 3600s
				conf_lmtp_menue lmtp_tls_session_cache_timeout
				;;
			lmtp_tls_verify_cert_match)
				# = hostname
				conf_lmtp_menue lmtp_tls_verify_cert_match
				;;
			lmtp_use_tls)
				# = no
				conf_lmtp_menue lmtp_use_tls
				;;
			lmtp_xforward_timeout)
				# LMTP xforward Timeout#{{{
				number_input -s "${lmtp_xforward_timeout%?}"
				if [[ -n $NUMBER ]] ; then
					lmtp_xforward_timeout="$NUMBER"
					postconf -e lmtp_xforward_timeout="$NUMBER"
				fi
				#}}}
				conf_lmtp_menue lmtp_xforward_timeout
				;;
			postfix)
				# postfix, Konfiguration neu einlesen
				postfix_start_reload
				break
				;;
			$gv_Back)	break
				;;
		esac
	done
}
