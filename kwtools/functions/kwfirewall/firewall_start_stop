# Funktion firewall_start_stop{{{
firewall_start_stop ()
{
	NO_RUN_MSG=$(gettext 'Die Firewall laeuft nicht. Nehmen Sie bite den Menuepunkt start.')
	RUN_MSG=$(gettext 'Die Firewall laeuft schon. Nehmen Sie bite den Menuepunkt reload.')
	# Funktion firewall_start_stop_menue{{{
	START_STOP_TITLE="start_stop_reload"
	START_STOP_MENU=$(gettext 'Firewall_start "" Firewall_stop "" Firewall_reload "" $gv_Back ""')
	firewall_start_stop_menue ()
	{
		menubox "$START_STOP_TITLE" "$gv_Menupoint" "$START_STOP_MENU"
	}
	#}}}
	firewall_start_stop_menue
	while [ "$gv_Auswahl" ] ; do
		case $gv_Auswahl in
			Hilfe|Help)
				script_help start_stop_reload_help
				firewall_start_stop_menue
				;;
			*_start)
				if [ ! -f /var/lock/subsys/kwfirewall ] ; then
					prog_exec /etc/init.d/kwfirewall start
				else
					msgbox "$gv_Info" "$RUN_MSG"
				fi
				firewall_start_stop_menue
				;;
			*_stop)
				if [ -f /var/lock/subsys/kwfirewall ] ; then
					prog_exec /etc/init.d/kwfirewall stop
				else
					msgbox "$gv_Info" "$NO_RUN_MSG"
				fi
				firewall_start_stop_menue
				;;
			*_reload)
				if [ -f /var/lock/subsys/kwfirewall ] ; then
					prog_exec /etc/init.d/kwfirewall restart
				else
					msgbox "$gv_Info" "$NO_RUN_MSG"
				fi
				firewall_start_stop_menue
				;;
			zurueck|back)	break
				;;
		esac
	done	
}
#}}}
