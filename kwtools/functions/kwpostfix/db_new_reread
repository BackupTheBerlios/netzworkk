# Funktion Datenbank neu erzeugen und Postfix anweisen die Einstellungen neu einzulesen{{{
#
# usage: db_new_reread [ -r ] TABFORMAT FILE
# -r - keine Warnung bei Duplikaten
# TABFORMAT - Tabellenformat
# FILE - Tabellendatei
db_new_reread() {
	if [ "$#" -ge 2 ] ; then
		OPT="$1"
		case "$OPT" in
			-r)
				case "$2" in
					btree|cdb|dbm|hash|sdbm)
						postmap -r $3 || return 1
						;;
				esac
				;;
			*)
				case "$1" in
					btree|cdb|dbm|hash|sdbm)
						postmap $2 || return 1
						;;
				esac
				;;
		esac
		# Diese Funktion steht im Script kwpostfix
		if [ "$?" = 0 ] ; then
			postfix_start_reload
		else
			MSG=$(gettext 'Es sind Fehler bei der Erzeugung der Datenbank aufgetreten. Bitte ueberpruefen Sie ihre Einstellungen.')
			msgbox "$gv_Attention" "$MSG"
		fi
	else
		no_para_msg "$0"
		return 1
	fi
	return 0
}
#}}}
