#!/bin/sh

EXEC=/usr/lib/kwtools/sys
SBIN_PATH=/usr/sbin

cd $SBIN_PATH
if [ -L kwfuse ] ; then
	rm kwfuse &>/dev/null
	ln -sf ${EXEC}/kwfuse ${SBIN_PATH}
else
	ln -sf ${EXEC}/kwfuse ${SBIN_PATH}
fi

echo ""
echo "Compile functions from kwtools-scripts"
echo ""
/bin/zsh -fc 'setopt extendedglob ; for i in /usr/share/kwtools/functions/kwfuse ; do
	zcompile -U -M $i.zwc $i/*~*.zwc(^/) ; chmod 644 $i.zwc ; done'	

exit 0
